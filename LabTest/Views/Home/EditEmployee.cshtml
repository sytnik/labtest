@model Employee
<h5>Edit existing employee</h5>
<div class="col-md-7 m-auto">
    <form asp-action="EditEmployee" class="mt-4 mb-4">
        @Html.HiddenFor(e => e.Id)
        <div class="form-group mt-4">
            <h6>Name</h6>
            <input asp-for="Name" class="form-control" required/>
        </div>
        <div class="form-group mt-4">
            <h6>Surname</h6>
            <input asp-for="Surname" class="form-control" required/>
        </div>
        <div class="form-group mt-4">
            <h6>Position</h6>
            <select asp-for="Position" class="custom-select" asp-items="ViewBag.Positions"></select>
        </div>
        <button type="submit" class="btn btn-primary mt-5">
            Edit employee
        </button>
    </form>
</div>